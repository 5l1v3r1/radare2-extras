VERSION=@VERSION@
HAVE_LIB_YARA=@HAVE_LIB_YARA@
PREFIX=@PREFIX@

DIRS=
ifeq ($(HAVE_LIB_YARA),1)
DIRS+=yara/yara2
DIRS+=yara/yara3
DIRS+=libr/asm/p
endif

all:
	for a in $(DIRS) ; do \
	( cd $$a ; ./configure --prefix=$(PREFIX) ; $(MAKE) ) ; \
	done

clean mrproper install symstall uninstall deinstall:
	for a in $(DIRS) ; do ( cd $$a ; $(MAKE) $@ ) ; done

